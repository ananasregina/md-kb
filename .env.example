# Markdown Knowledge Base Configuration

# Directory containing markdown files to index
MDKB_DIR=/path/to/your/markdown/files

# PostgreSQL database configuration
MDKB_DB_HOST=localhost
MDKB_DB_PORT=5432
MDKB_DB_NAME=md_kb
MDKB_DB_USER=mdkb_user
MDKB_DB_PASSWORD=your_password_here

# LM Studio embedding configuration
EMBEDDING_URL=http://127.0.0.1:1338/v1
EMBEDDING_MODEL=text-embedding-nomic-embed-text-v1.5-embedding
EMBEDDING_DIMENSION=768

# Logging configuration
# File log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
MDKB_LOG_LEVEL=INFO
# Console log level (typically higher threshold than file, e.g., WARNING)
MDKB_LOG_LEVEL_CONSOLE=WARNING
# Log file name (stored in ~/.config/mdkb/)
MDKB_LOG_FILE=mcp.log
# Maximum log file size in bytes before rotation (default: 10MB)
MDKB_LOG_MAX_BYTES=10485760
# Number of backup log files to keep (default: 10)
MDKB_LOG_BACKUP_COUNT=10

# JSON-RPC server configuration
MDKB_JSONRPC_HOST=127.0.0.1
MDKB_JSONRPC_PORT=8023
